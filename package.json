{
  "name": "destiny2-overlay-timer",
  "version": "1.0.0",
  "description": "API et overlay timer pour les activit√©s Destiny 2",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "electron": "electron dist/electron/main.js",
    "electron:debug": "electron dist/electron/main.js --enable-logging --disable-hardware-acceleration",
    "dev-electron": "electron src/electron/main.ts",
    "build-electron": "tsc && electron-builder",
    "test": "jest"
  },
  "keywords": ["destiny2", "bungie", "api", "overlay", "timer", "gaming"],
  "author": "Alexi",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "electron": "^27.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/ws": "^8.5.6",
    "typescript": "^5.2.0",
    "ts-node": "^10.9.0",
    "electron-builder": "^24.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "build": {
    "appId": "com.destiny2.overlay.timer",
    "productName": "Destiny 2 Overlay Timer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
